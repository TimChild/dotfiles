# NOTE 2025-02-11: This was never actually used (was previously an nginx setup)

http://ceracool.ca http://www.ceracool.ca www.ceracool.ca {
	redir https://ceracool.ca{uri}
}

ceracool.ca {
	encode gzip

	@backend_routes path /_event/* /ping /_upload /_updload/*
	handle @backend_routes {
		reverse_proxy ceracool-backend:8000
	}

	root * /srv/www/ceracool
	route {
		try_files {path} {path}/ /404.html
		file_server
	}
}
